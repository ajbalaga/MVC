@model SimpleWebApp.data.ViewModel.DashboardViewModel
@{
}

<div class="container mt-5">
    <!-- Clients Section -->
    <div class="row mb-4">
        <div class="col-6">
            <h2>Clients</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" href="@Url.Action("CreateNew")/?roleid=2"> + Add New User</a>
        </div>
    </div>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Address</th>
                <th>Note</th>
                <th>Birthday</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.ClientList)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.EmailAddress</td>
                    <td>@user.Address</td>
                    <td>@user.Notes</td>
                    <td>@(user.Birthday != null ? user.Birthday.Value.ToString("MM/dd/yyyy") : "-")</td>
                    <td>
                        <a href="@Url.Action("UpdateUser","Home", new { id = user.ID})" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("DeleteUser","Home", new { userID = user.ID})" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Administrators Section -->
    <div class="row mb-4 mt-5">
        <div class="col-6">
            <h2>Administrators</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" href="@Url.Action("CreateNew")/?roleid=1">+ Add New User</a>
        </div>
    </div>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Address</th>
                <th>Note</th>
                <th>Birthday</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.AdminList)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.EmailAddress</td>
                    <td>@user.Address</td>
                    <td>@user.Notes</td>
                    <td>@(user.Birthday != null ? user.Birthday.Value.ToString("MM/dd/yyyy") : "-")</td>
                    <td>
                        @if (user.ID == 1)
                        {
                            <span class="badge bg-success">Super Admin</span>
                        }
                        else
                        {
                            <a href="@Url.Action("UpdateUser","Home", new { id = user.ID})" class="btn btn-sm btn-warning">Edit</a>
                            <a href="@Url.Action("DeleteUser","Home", new { userID = user.ID})" class="btn btn-sm btn-danger">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
