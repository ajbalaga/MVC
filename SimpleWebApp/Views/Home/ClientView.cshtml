@model SimpleWebApp.data.Model.UserDetails

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" readonly class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" readonly class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PhoneNumber" class="control-label"></label>
                        <input asp-for="PhoneNumber" readonly class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" readonly class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Address" class="control-label"></label>
                        <textarea asp-for="Address" readonly class="form-control" rows="3"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Notes" class="control-label"></label>
                        <textarea asp-for="Notes" readonly class="form-control" rows="3"></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Birthday" class="control-label"></label>
                        <input asp-for="Birthday" readonly class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
